function [ErrorM] = testing(f_opt,thea_opt)

% Test the rest data
test_0 = X((51:554),:);
t0_feature = test_0(:,f_opt);
test_1 = X((605:end),:);
t1_feature = test_1(:,f_opt);
t_feature = [t0_feature;t1_feature];
t_labels = [ones(504,1).*(-1);ones(521,1)];

result=[];
for i = 1:length(t_feature)
    if t_feature(i) > thea_opt
        class = 1;
    else
        class = -1;
    end
    result = [result;class]; 
end
ErrorM  = sum(t_labels ~= result) / length(t_labels);
display(ErrorM);
